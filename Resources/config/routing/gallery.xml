<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
    <route id="FightmasterGalleryBundle_Gallery" pattern="/">
        <default key="_controller">FightmasterGalleryBundle:Gallery:index</default>
    </route>
    <route id="FightmasterGalleryBundle_Gallery_show" pattern="/{id}/show">
        <default key="_controller">FightmasterGalleryBundle:Gallery:show</default>
    </route>

    <route id="FightmasterGalleryBundle_Gallery_new" pattern="/new">
        <default key="_controller">FightmasterGalleryBundle:Gallery:new</default>
    </route>

    <route id="FightmasterGalleryBundle_Gallery_create" pattern="/create">
        <default key="_controller">FightmasterGalleryBundle:Gallery:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="FightmasterGalleryBundle_Gallery_edit" pattern="/{id}/edit">
        <default key="_controller">FightmasterGalleryBundle:Gallery:edit</default>
    </route>

    <route id="FightmasterGalleryBundle_Gallery_update" pattern="/{id}/update">
        <default key="_controller">FightmasterGalleryBundle:Gallery:update</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="FightmasterGalleryBundle_Gallery_delete" pattern="/{id}/delete">
        <default key="_controller">FightmasterGalleryBundle:Gallery:delete</default>
        <requirement key="_method">post</requirement>
    </route>

</routes>
